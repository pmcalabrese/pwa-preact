{
    "compilerOptions": {
      "outDir": "./public",
      "target": "es2016",
      "module": "commonjs",
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "removeComments": true,
      "sourceMap": true,
      "jsx": "react",
      "experimentalDecorators": true,
      "jsxFactory": "h",
      "lib": ["es2016", "dom"]
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }